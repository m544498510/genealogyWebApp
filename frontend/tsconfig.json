{
  "compilerOptions": {
    "outDir": "./public/dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~": ["src/"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
